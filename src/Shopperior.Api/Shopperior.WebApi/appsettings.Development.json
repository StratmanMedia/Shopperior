{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "C:\\logs\\Shopperior.Api\\ShopperiorAPI-{Date}.log"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "ShopperiorDb": "Server=(local);Initial Catalog=Shopperior;Integrated Security=True;"
  },
  "OIDC": {
    "Authority": "__IDENTITY_AUTHORITY__",
    "Audience": "__IDENTITY_AUDIENCE__"
  } 
}
