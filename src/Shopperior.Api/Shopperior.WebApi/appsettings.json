{
  "ConnectionStrings": {
    "ShopperiorDb": "__SHOPPERIOR_DB_CONN_STRING__"
  },
  "AllowedOrigins": "__ALLOWED_ORIGINS__",
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Loggly"
      }
    ],
    "Loggly": {
      "ApplicationName": "Shopperior API",
      "EndpointPort": "443",
      "IsEnabled": "true",
      "ThrowExceptions": "true",
      "LogTransport": "Https",
      "EndpointHostname": "logs-01.loggly.com",
      "CustomerToken": "__TOKEN__"
    }
  },
  "OIDC": {
    "Authority": "__IDENTITY_AUTHORITY__",
    "Audience": "__IDENTITY_AUDIENCE__",
    "Scopes": [ "shop.api.access" ]
  }
}
